        <h1>EDIT YOUR SONG</h1>

<form method="POST" action="/my_songs/<%= @my_song.id %>">

        <input type="hidden" name="_method" value="patch">

    <h2> "MY WAY" - SONG </h2>

        Renamed: <input type="text" name="my_song[rename]" value="<%= @my_song.rename%>">
        Make in the style of: <input type="text" name="my_song[style_of_remake]" value="<%= @my_song.style_of_remake%>">
        Note: <input type="text" name="my_song[add_note]" value="<%= @my_song.add_note%>">

         <input type="submit" value="update 'my way' song">

    <br>
    <br>

    <h2> The Original Song </h2>

        Name: <input type="text" name="song.[song]" value="<%= @song.song%>"readonly>
        Musician: <input type="text" name="song.[musician]" value="<%= @song.musician%>"readonly>
        Genre: <input type="text" name="song.[genre]" value="<%= @song.genre%>"readonly>
        Year: <input type="text" name="song.[year]" value="<%= @song.year%>"readonly>

</form>
